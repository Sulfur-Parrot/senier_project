<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.preference.PreferenceCategory android:title = "알림 설정">
        <androidx.preference.SwitchPreference
            android:defaultValue="true"
            android:key="Push_notification"
            android:summary="푸쉬 알림을 키려면 체크하세요"
            android:title="푸쉬 알림"/>
        <androidx.preference.SwitchPreference
            android:defaultValue="true"
            android:key="Vib_notification"
            android:summary="진동 알림을 키려면 체크하세요"
            android:title="진동 알림"/>
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory android:title="언어 설정">
        <androidx.preference.ListPreference
            android:defaultValue="ko"
            android:entries="@array/language"
            android:entryValues="@array/language_value"
            android:key="Language"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="언어"/>
    </androidx.preference.PreferenceCategory>

</androidx.preference.PreferenceScreen>